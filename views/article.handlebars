<div class="container">
  <div class="row text-center indigo darken-4">
    <div class="col l12 m6">
      <div class="white-text"></div>
      <h3>"{{data.title}}" Notes</h3>
    </div>
  </div>
  <div class="row">
    <div class="col s4">
      <a href="/saved"><button class="waves-effect waves-teal btn-flat">Saved Articles</button></a> 
      <a href="/"><button class="waves-effect waves-teal btn-flat">Home</button></a>
    </div>
  </div>
  <div class="row">
    <div class="col s6">
      <div class="card indigo darken-4 ">
        <div class="card-body">
            <form class="white-text">
              <div class="form-group">
                <label for="title-note"><h4>Title</h4></label>
                <input type="text" id="title-note" class="form-control" aria-describedby="title-text" placeholder="Title of note">
              </div>
              <div class="form-group">
                <label for="note-description"><h4>Make a note on the article</h4></label>
                <textarea class="form-control" id="note-description" rows="4" aria-describedby="note-description" placeholder="Your Comment"></textarea>
              </div>
              <br>
              <button id="submit-note" data-id={{data._id}} style="padding: 5px 10px; float:right">Submit</button>
            </form>
        </div>
      </div>
    </div>
    <div class="col s6">
        <h4>Previous Comments</h4>
          {{#if data.note}}
            {{#each data.note}}
              <hr>
              <button data-id={{this._id}} class="delete-note" style="float:right">Delete</button>
              <h4><strong>{{this.title}}</strong></h4>
              <h5>{{this.body}}</h5>
              <hr>
            {{/each}}
          {{else}}
            <h6>There are no comments on this article.</h6>
          {{/if}}
    </div>
  </div>
</div>